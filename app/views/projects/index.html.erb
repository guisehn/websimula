<div class="container">
  <h1>Projects</h1>

  <div class="row">
    <div class="col-md-5">
      <table class="table">
        <thead>
          <tr>
            <th width="100%">Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td nowrap><%= link_to 'Show', project %></td>
              <td nowrap><%= link_to 'Edit', edit_project_path(project) %></td>
              <td nowrap><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to 'New Project', new_project_path %>
</div>
