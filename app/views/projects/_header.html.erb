<div class="project-header">
  <div class="container">
    <div class="project-name">
      <% if local_assigns[:internal] %>
        <h1>
          <%= link_to @project do %>
            ‚Üê <span id="project-name"><%= project.name %></span>
          <% end %>
        </h1>
      <% else %>
        <h1><span id="project-name"><%= project.name %></span></h1>
      <% end %>
    </div>

    <% unless local_assigns[:internal] %>
      <div class="project-actions">
        <%= link_to 'javascript:alert("TO-DO")', class: 'action' do %>
          <span class="glyphicon glyphicon glyphicon-wrench"></span>
          <label>Ajustes</label>
        <% end %>

        <%= link_to new_project_simulation_path(@project), class: 'action' do %>
          <span class="glyphicon glyphicon-play-circle"></span>
          <label>Simular</label>
        <% end %>
      </div>
    <% end %>

    <div class="clearfix"></div>
  </div>
</div>
