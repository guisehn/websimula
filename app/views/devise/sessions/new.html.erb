<div class="container">
  <h2>Seja bem vindo!</h2>

  <p>Digite seu e-mail e senha para continuar, ou <%= link_to 'cadastre-se', new_registration_path(resource_name) %>.</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-5">
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Entrar', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>

  <br>
  <%= link_to 'Esqueceu a senha?', new_password_path(resource_name) %><br>
  <%= link_to 'Cadastrar nova conta', new_registration_path(resource_name) %><br>
</div>
