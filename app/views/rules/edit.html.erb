<%= render 'projects/header', project: @project, internal: true %>

<div class="container">
  <div class="back-link-container">
    <%= link_to "← Voltar para #{@agent.name}", edit_project_agent_path(@project, @agent) %>
  </div>

  <% if @project.can_be_edited_by?(current_user) %>
    <h2>Editar regra</h2>
  <% else %>
    <h2>Regra do agente</h2>
  <% end %>

  <%= render 'form' %>

  <% if @project.can_be_edited_by?(current_user) %>
    <hr>

    <div class="other-actions">
      <h5>Outras ações</h5>

      <%= link_to 'Duplicar regra', new_project_agent_rule_path(@project, @agent, duplicate: @rule.id), class: 'btn btn-sm btn-default' %>

      <%= link_to 'Excluir regra', project_agent_rule_path(@project, @agent, @rule), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Tem certeza que deseja excluir esta regra? Esta ação é irreversível.' } %>
    </div>
  <% end %>
</div>
